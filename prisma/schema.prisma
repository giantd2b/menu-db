// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// หมวดหมู่รายการ
model Category {
  id                String             @id @default(cuid())
  name              String             @unique
  description       String?
  color             String?            // สีสำหรับแสดงผล UI
  icon              String?            // ไอคอนสำหรับแสดงผล
  transactions      Transaction[]
  rules             CategoryRule[]     // กฎสำหรับ auto-categorize
  splits            TransactionSplit[] // Split transactions
  recurringPatterns RecurringPattern[] // Recurring patterns
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@map("categories")
}

// กฎสำหรับจัดหมวดหมู่อัตโนมัติ
model CategoryRule {
  id          String   @id @default(cuid())

  // เชื่อมกับ Category
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // ประเภท pattern
  field       String   // "note" หรือ "description"
  pattern     String   // คำหรือ regex pattern
  isRegex     Boolean  @default(false) // เป็น regex หรือไม่

  // ลำดับความสำคัญ (ยิ่งต่ำยิ่งสำคัญ)
  priority    Int      @default(10)

  // สถานะ
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([priority])
  @@map("category_rules")
}

// รายการธุรกรรมจาก Bank Statement
model Transaction {
  id              String             @id @default(cuid())

  // ข้อมูลเวลา
  date            DateTime           // วันที่ทำรายการ (รวม Time)

  // ข้อมูลรายการ
  description     String             // รายละเอียดที่ใช้แสดงผล (Tr Description)
  rawDescription  String             // ข้อความดิบจากไฟล์ (Description column)
  note            String?            // หมายเหตุเพิ่มเติม (Note column)

  // ข้อมูลการเงิน
  withdrawal      Decimal?           @db.Decimal(15, 2) // ยอดเงินถอน
  deposit         Decimal?           @db.Decimal(15, 2) // ยอดเงินฝาก
  balance         Decimal            @db.Decimal(15, 2) // ยอดคงเหลือ

  // ข้อมูลเพิ่มเติมจาก Bank Statement
  accountNumber   String?            // เลขที่บัญชี
  accountName     String?            // ชื่อบัญชี
  accountType     String?            // ประเภทบัญชี (Savings, Current, etc.)
  channel         String?            // ช่องทางทำรายการ (BCMS, ENET, ATS, etc.)
  transactionCode String?            // รหัสรายการ (X1, X2, etc.)
  chequeNumber    String?            // เลขที่เช็ค (ถ้ามี)

  // Relation กับ Category
  categoryId      String?
  category        Category?          @relation(fields: [categoryId], references: [id])

  // Split transaction
  isSplit         Boolean            @default(false)
  splits          TransactionSplit[]

  // Metadata
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@unique([date, accountNumber, balance, withdrawal], name: "unique_transaction")
  @@index([date])
  @@index([categoryId])
  @@index([accountNumber])
  @@map("transactions")
}

// แยกรายการธุรกรรมเป็นหลายหมวดหมู่
model TransactionSplit {
  id            String      @id @default(cuid())

  // เชื่อมกับ Transaction
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  // เชื่อมกับ Category
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])

  // ยอดเงินในส่วนนี้
  amount        Decimal     @db.Decimal(15, 2)

  // หมายเหตุ
  note          String?

  createdAt     DateTime    @default(now())

  @@index([transactionId])
  @@map("transaction_splits")
}

// เก็บการแก้ไขของ user เพื่อให้ AI เรียนรู้
model AICorrection {
  id              String   @id @default(cuid())

  // ข้อมูล input
  note            String   // Note ที่ใช้ในการจัดหมวดหมู่
  description     String?  // Description (optional)

  // ผลลัพธ์
  aiCategory      String   // หมวดหมู่ที่ AI แนะนำ
  userCategory    String   // หมวดหมู่ที่ user เลือก (แก้ไข)

  // Metadata
  createdAt       DateTime @default(now())

  @@index([userCategory])
  @@map("ai_corrections")
}

// รายจ่ายประจำ (Recurring Transactions)
model RecurringPattern {
  id              String    @id @default(cuid())

  // ชื่อและ pattern
  name            String    // ชื่อที่แสดง เช่น "ค่าไฟฟ้า MEA"
  pattern         String    // Pattern สำหรับ match (note หรือ description)
  field           String    @default("note") // "note" หรือ "description"

  // ความถี่
  frequency       String    // "monthly", "weekly", "yearly"
  expectedDay     Int?      // วันที่คาดว่าจะเกิด (1-31)

  // ยอดเงิน
  averageAmount   Decimal   @db.Decimal(15, 2)
  minAmount       Decimal?  @db.Decimal(15, 2)
  maxAmount       Decimal?  @db.Decimal(15, 2)

  // เชื่อมกับ Category
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])

  // สถิติ
  occurrenceCount Int       @default(0) // จำนวนครั้งที่เจอ
  lastOccurrence  DateTime? // ครั้งล่าสุดที่เจอ

  // สถานะ
  isActive        Boolean   @default(true)
  isAutoDetected  Boolean   @default(true) // ตรวจจับอัตโนมัติ หรือ user สร้างเอง

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([pattern])
  @@index([categoryId])
  @@map("recurring_patterns")
}
